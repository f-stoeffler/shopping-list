{% extends 'base.html.twig' %} {% block title %}ShoppingList index{% endblock %}
{% block body %}
<h1>Your Shopping Lists</h1>

<div>
    <div class="row row-cols-2">
        {% for shopping_list in shopping_lists %}
        <div class="col mb-3">
            <div class="card p-0">
                <h5 class="card-header">{{ shopping_list.name }}</h5>
                <div class="card-body">
                    <div class="card mb-2">
                        <ul class="list-group list-group-flush">
                            {% for item in shopping_list.items %}
                            <li class="list-group-item d-flex">
                                <div
                                    class="align-self-center {% if item.acquired %}text-decoration-line-through text-muted{% endif %}">
                                    {{ item.name }}
                                </div>
                                <div class="ms-auto">
                                    <a class="btn btn-primary"
                                        href="{{ path('app_item_edit', {'id': item.id}) }}">Edit</a>
                                    {{ include('item/_delete_form.html.twig') }}
                                </div>
                            </li>
                            {% else %}
                            <li class="list-group-item list-group-item-light text-muted">No records found</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div>
                        <a class="btn btn-primary" href="{{
                                path('app_shopping_list_item_new', {
                                    id: shopping_list.id
                                })
                            }}">Add Item</a>
                        <a class="btn btn-outline-primary"
                            href="{{path('app_shopping_list_edit', {id: shopping_list.id }) }}">Edit</a>
                        {{ include('shopping_list/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div>
            <div colspan="3">No records found</div>
        </div>
        {% endfor %}
    </div>
</div>

<a class="btn btn-primary mt-2 w-100" href="{{ path('app_shopping_list_new') }}">Create new List</a>
{% endblock %}