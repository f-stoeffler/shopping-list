{% extends 'base.html.twig' %} {% block title %}ShoppingList index{% endblock %}
{% block body %}
<div class="d-flex">
    <h1 class="mb-3 mt-2">Your Shopping Lists</h1>
    <div class="ms-auto align-self-center">
        <a class=" btn btn-outline-secondary" href="{{path('app_home_index') }}">Back to home</a>
    </div>
</div>

<div class="row row-cols-1 row-cols-xl-2 row-gap-3 mb-4">
    {% for shopping_list in shopping_lists %}
    <div class="col">
        <div class="card p-0">
            <h5 class="card-header">{{ shopping_list.name }}</h5>
            <div class="card-body">
                <div class="card mb-2">
                    <ul class="list-group list-group-flush">
                        {% for item in shopping_list.items %}
                        <li class="list-group-item d-flex">
                            <div
                                class="align-self-center {% if item.acquired %}text-decoration-line-through text-muted{% endif %}">
                                {{ item.name }}
                            </div>
                        </li>
                        {% else %}
                        <li class="list-group-item list-group-item-light text-muted">No records found</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="d-flex gap-1">
                    <a class="btn btn-primary" href="{{
                                path('app_shopping_list_items_edit', {
                                    id: shopping_list.id
                                })
                            }}">Edit List</a>
                    {{ include('shopping_list/_delete_form.html.twig') }}
                    <div class="ms-auto align-self-end text-muted fs-6">ID: {{ shopping_list.id }}</div>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div>
        <div colspan="3">No records found</div>
    </div>
    {% endfor %}
</div>

<a class="btn btn-primary w-100" href="{{ path('app_shopping_list_new') }}">Create new List</a>
{% endblock %}