<form
    method="post" class="btn p-0"
    action="{{ path('app_shopping_list_delete', { id: shopping_list.id }) }}"
    onsubmit="return confirm('Are you sure you want to delete this list?');"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ shopping_list.id) }}"
    />
    <button class="btn btn-danger">Delete</button>
</form>
